import re

def complexity_checker(password):
    if len(password) < 8:
        return False
    if not re.search("[A-Z]", password):
        return False
    if not re.search("[a-z]", password):
        return False
    if not re.search("[0-9]", password):
        return False
    if not re.search("[!@#$%^&*(),.?\":{}|<>]", password):
        return False
    return True

key = input("Enter a password: ")
print(f"Password: {key} \nSafe: {complexity_checker(key)}")
